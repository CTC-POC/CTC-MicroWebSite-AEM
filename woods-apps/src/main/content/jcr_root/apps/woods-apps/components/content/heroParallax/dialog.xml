<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Hero Parallax"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <generalTab
                jcr:primaryType="cq:Widget"
                title="General"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <bottomtext
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Bottom Text"
                        isRichTextFlag="{Boolean}false"
                        name="./bottomtext"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <format
                                jcr:primaryType="nt:unstructured"
                                features="*"
                                path="/apps/informa/components/commons/text/json/formates.overlay.json"/>
                            <paraformat
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <formats jcr:primaryType="cq:WidgetCollection">
                                    <Paragraph
                                        jcr:primaryType="nt:unstructured"
                                        description="Paragraph"
                                        tag="p"/>
                                    <heading1
                                        jcr:primaryType="nt:unstructured"
                                        description="Heading 1"
                                        tag="h1"/>
                                    <heading2
                                        jcr:primaryType="nt:unstructured"
                                        description="Heading 2"
                                        tag="h2"/>
                                    <heading3
                                        jcr:primaryType="nt:unstructured"
                                        description="Heading 3"
                                        tag="h3"/>
                                    <heading4
                                        jcr:primaryType="nt:unstructured"
                                        description="Heading 4"
                                        tag="h4"/>
                                    <heading5
                                        jcr:primaryType="nt:unstructured"
                                        description="Heading 5"
                                        tag="h5"/>
                                    <heading6
                                        jcr:primaryType="nt:unstructured"
                                        description="Heading 6"
                                        tag="h6"/>
                                </formats>
                            </paraformat>
                            <edit
                                jcr:primaryType="nt:unstructured"
                                defaultPasteMode="plaintext"
                                features="[cut,copy,paste-plaintext]"
                                stripHtmlTags="{Boolean}true"/>
                            <fontstyles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="cq:WidgetCollection">
                                    <pinktext
                                        jcr:primaryType="nt:unstructured"
                                        cssName="pinktext"
                                        text="Pink"/>
                                    <yellowtext
                                        jcr:primaryType="nt:unstructured"
                                        cssName="yellowtext"
                                        text="Yellow"/>
                                </styles>
                            </fontstyles>
                            <fontcolor
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <colors jcr:primaryType="cq:WidgetCollection">
                                    <pink
                                        jcr:primaryType="nt:unstructured"
                                        cssName="pinktext"
                                        text="Pink"/>
                                    <yellow
                                        jcr:primaryType="nt:unstructured"
                                        cssName="yellowtext"
                                        text="Yellow"/>
                                </colors>
                            </fontcolor>
                            <misctools
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        </rtePlugins>
                    </bottomtext>
                    <images
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Images"
                        name="./images"
                        xtype="mtmulticompositefield">
                        <fieldConfigs jcr:primaryType="cq:WidgetCollection">
                            <imagepath
                                jcr:primaryType="cq:Widget"
                                allowBlank="false"
                                fieldLabel="ImagePath"
                                name="imagepath"
                                rootPath="/content/dam"
                                width="300"
                                xtype="pathfield"/>
                            <text
                                jcr:primaryType="cq:Widget"
                                allowBlank="true"
                                fieldLabel="Text"
                                isRichTextFlag="{Boolean}false"
                                name="./text"
                                width="300"
                                xtype="richtext">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <format
                                        jcr:primaryType="nt:unstructured"
                                        features="*"
                                        path="/apps/informa/components/commons/text/json/formates.overlay.json"/>
                                    <paraformat
                                        jcr:primaryType="nt:unstructured"
                                        features="*">
                                        <formats jcr:primaryType="cq:WidgetCollection">
                                            <Paragraph
                                                jcr:primaryType="nt:unstructured"
                                                description="Paragraph"
                                                tag="p"/>
                                            <heading1
                                                jcr:primaryType="nt:unstructured"
                                                description="Heading 1"
                                                tag="h1"/>
                                            <heading2
                                                jcr:primaryType="nt:unstructured"
                                                description="Heading 2"
                                                tag="h2"/>
                                            <heading3
                                                jcr:primaryType="nt:unstructured"
                                                description="Heading 3"
                                                tag="h3"/>
                                            <heading4
                                                jcr:primaryType="nt:unstructured"
                                                description="Heading 4"
                                                tag="h4"/>
                                            <heading5
                                                jcr:primaryType="nt:unstructured"
                                                description="Heading 5"
                                                tag="h5"/>
                                            <heading6
                                                jcr:primaryType="nt:unstructured"
                                                description="Heading 6"
                                                tag="h6"/>
                                        </formats>
                                    </paraformat>
                                    <edit
                                        jcr:primaryType="nt:unstructured"
                                        defaultPasteMode="plaintext"
                                        features="[cut,copy,paste-plaintext]"
                                        stripHtmlTags="{Boolean}true"/>
                                </rtePlugins>
                            </text>
                            <alttext
                                jcr:primaryType="cq:Widget"
                                allowBlank="true"
                                fieldLabel="Alt text"
                                name="alttext"
                                width="300"
                                xtype="textfield"/>
                        </fieldConfigs>
                    </images>
                </items>
            </generalTab>
            <stylesTab
                jcr:primaryType="cq:Widget"
                xtype="componentstyles"/>
        </items>
    </items>
</jcr:root>
