<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:mix="http://www.jcp.org/jcr/mix/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:description="Template for home pages."
    jcr:mixinTypes="[mix:lockable]"
    jcr:primaryType="cq:Template"
    jcr:title="Homepage"
    allowedPaths="[/content/geometrixx-outdoors/?,/content/catalogs/geometrixx-outdoors(/.*)?/template-pages(/.*)?]"
    ranking="{Long}40">
    <jcr:content
        jcr:primaryType="cq:PageContent"
        sling:resourceType="geometrixx-outdoors/components/page_home">
        <par
            jcr:primaryType="nt:unstructured"
            sling:resourceType="foundation/components/parsys">
            <banner-teaser
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/personalization/components/teaser"
                location="banner"
                strategyPath="cq/personalization/clientlib/source/strategies/list/first.js"/>
            <colctrl
                jcr:primaryType="nt:unstructured"
                sling:resourceType="geometrixx-outdoors/components/colctrl"
                controlType="start"
                layout="3;colctrl-3c"/>
            <gear-header
                jcr:primaryType="nt:unstructured"
                jcr:title="Gear"
                sling:resourceType="geometrixx-outdoors/components/social/recommend/recommend_header"
                moreLink="/content/geometrixx-outdoors/en/equipment.html"
                moreText="See More Gear"/>
            <gear-bar
                jcr:primaryType="nt:unstructured"
                sling:resourceType="foundation/components/image"
                fileReference="/content/dam/geometrixx-outdoors/colors/orange.png"/>
            <gear-teaser
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/personalization/components/teaser"
                location="products"
                strategyPath="cq/personalization/clientlib/source/strategies/list/first.js"/>
            <col_break_0
                jcr:primaryType="nt:unstructured"
                sling:resourceType="geometrixx-outdoors/components/colctrl"
                controlType="break"/>
            <article-header
                jcr:primaryType="nt:unstructured"
                jcr:title="Article"
                sling:resourceType="geometrixx-outdoors/components/social/recommend/recommend_header"
                moreLink="/content/geometrixx-outdoors/en/company/unlimited-blog.html"
                moreText="View the Blog"/>
            <article-bar
                jcr:primaryType="nt:unstructured"
                sling:resourceType="foundation/components/image"
                fileReference="/content/dam/geometrixx-outdoors/colors/orange.png"/>
            <article-teaser
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/personalization/components/teaser"
                location="article"
                strategyPath="cq/personalization/clientlib/source/strategies/list/first.js"/>
            <col_break_1
                jcr:primaryType="nt:unstructured"
                sling:resourceType="geometrixx-outdoors/components/colctrl"
                controlType="break"/>
            <social-header
                jcr:primaryType="nt:unstructured"
                jcr:title="Social"
                sling:resourceType="geometrixx-outdoors/components/social/recommend/recommend_header"
                moreLink="/content/geometrixx-outdoors/en/community.html"
                moreText="View More"/>
            <social-bar
                jcr:primaryType="nt:unstructured"
                sling:resourceType="foundation/components/image"
                fileReference="/content/dam/geometrixx-outdoors/colors/orange.png"/>
            <recommend-social
                jcr:primaryType="nt:unstructured"
                sling:resourceType="geometrixx-outdoors/components/social/recommend/recommend_social"/>
            <col_end
                jcr:primaryType="nt:unstructured"
                sling:resourceType="geometrixx-outdoors/components/colctrl"
                controlType="end"/>
        </par>
    </jcr:content>
</jcr:root>
